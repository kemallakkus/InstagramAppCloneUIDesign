<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_55dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StoryFragment">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@color/view_passive"
            />

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@color/view_passive"
            android:layout_marginStart="@dimen/_3sdp"/>

        <View
            android:id="@+id/view3"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@color/view_passive"
            android:layout_marginStart="@dimen/_3sdp"/>

        <View
            android:id="@+id/view4"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@color/view_passive"
            android:layout_marginStart="@dimen/_3sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mini_photo"
            android:layout_width="@dimen/margin_35dp"
            android:layout_height="@dimen/margin_35dp"
            android:padding="@dimen/margin_3dp"
            android:src="@drawable/mariecurie"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/Circular"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="bottom">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="brhzatc"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/margin_6dp"
                android:textSize="@dimen/text_size_story"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9s"
                android:textColor="@color/hint_color_search"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginStart="@dimen/margin_6dp"
                android:textSize="@dimen/text_size_story"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_point"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            app:tint="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_45dp"
            android:background="@drawable/message_box_background"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_weight="1"
            android:hint="Mesaj GÃ¶nder..."
            android:textSize="@dimen/text_size_button"
            android:textColorHint="@color/white"
            android:padding="@dimen/margin_15dp"/>

        <ImageView
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:src="@drawable/ic_notification"
            app:tint="@color/white" />

        <ImageView
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="@dimen/margin_30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:src="@drawable/ic_send_message"
            app:tint="@color/white" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>